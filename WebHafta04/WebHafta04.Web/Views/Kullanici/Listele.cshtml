@{
}

@using System.Text.Json
@using WebHafta04.Web.Models

@model List<Kullanici>

<table width="400" border="1">
    <thead>
        <tr>
            <td colspan="4" style="text-align:center; font-weight:bold;">View tarafından gelen</td>
        </tr>
        <tr>
            <th>Id</th>
            <th>Adı</th>
            <th>Email</th>
            <th>Sifre</th>
        </tr>
    </thead>
    <tbody>
        @foreach(var k in Model){
            <tr>
                <td>@k.KullaniciId</td>
                <td>@k.KullaniciAdi</td>
                <td>@k.KullaniciEmail</td>
                <td>@k.KullaniciSifre</td>
            </tr>
        }
    </tbody>
</table>

<br />
<br />

<table width="400" border="1">
    <thead>
        <tr>
            <td colspan="4" style="text-align:center; font-weight:bold;">ViewBag tarafından gelen</td>
        </tr>
        <tr>
            <th>Id</th>
            <th>Adı</th>
            <th>Email</th>
            <th>Sifre</th>
        </tr>
    </thead>
    <tbody>
        @foreach (var k in ViewBag.KulListe)
        {
            <tr>
                <td>@k.KullaniciId</td>
                <td>@k.KullaniciAdi</td>
                <td>@k.KullaniciEmail</td>
                <td>@k.KullaniciSifre</td>
            </tr>
        }
    </tbody>
</table>


<br />
<br />

<table width="400" border="1">
    <thead>
        <tr>
            <td colspan="4" style="text-align:center; font-weight:bold;">ViewData tarafından gelen</td>
        </tr>
        <tr>
            <th>Id</th>
            <th>Adı</th>
            <th>Email</th>
            <th>Sifre</th>
        </tr>
    </thead>
    <tbody>
        @foreach (var k in (List<Kullanici>)ViewData["KulListe"])
        {
            <tr>
                <td>@k.KullaniciId</td>
                <td>@k.KullaniciAdi</td>
                <td>@k.KullaniciEmail</td>
                <td>@k.KullaniciSifre</td>
            </tr>
        }
    </tbody>
</table>

<br />
<br />

<table width="400" border="1">
    <thead>
        <tr>
            <td colspan="4" style="text-align:center; font-weight:bold;">TempData tarafından gelen</td>
        </tr>
        <tr>
            <th>Id</th>
            <th>Adı</th>
            <th>Email</th>
            <th>Sifre</th>
        </tr>
    </thead>
    <tbody>
        @foreach (var k in JsonSerializer.Deserialize<List<Kullanici>>((string)TempData["KulListe"]))
        {
            <tr>
                <td>@k.KullaniciId</td>
                <td>@k.KullaniciAdi</td>
                <td>@k.KullaniciEmail</td>
                <td>@k.KullaniciSifre</td>
            </tr>
        }
    </tbody>
</table>